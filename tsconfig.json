{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./"
  },
  "include": [
    "server/*",
    "auto/*",
    "database/*",
    "exceptions/*",
    "middlewares/*",
    "*",
    "cache/*",
    "repository/*",
    "services/*"
  ]
}
